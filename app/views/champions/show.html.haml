.row
  .container
    .col-xs-3
      = image_tag @champion.champion_img.url(:champion_show), class: "champion-show"
    .col-xs-6
      %h2
        = @champion.name
      %h3
        = @champion.category.name
      %h4
        %label
          Health:
          = @champion.health
        %label
          Armor:
          = @champion.armor
        %label
          Attack:
          = @champion.attack
      .links.btn-group
        =link_to "Back", root_path, class: "btn btn-md btn-warning"

        - if user_signed_in?
          - if @champion.user_id == current_user.id
            = link_to "Edit", edit_champion_path(@champion), class: "btn btn-md btn-info"
            = link_to "Delete", champion_path(@champion), method: :delete, data:{confirm: "Are you sure?"}, class: "btn btn-md btn-danger"

.row
  .col-md-4
    .reviews
      %h1.rev
        Reviews:
      = render @champion.reviews #wynika to z konwencji do kazdego championa kt√≥ry posiada receznzje szuka w widokach recenzji pojedynczej a jezeli jest ich wiecej wypisuje dowolna ilosc
      %br
      %div
        =link_to "Add review", new_champion_review_path(@champion), class: "btn btn-md btn-success"















